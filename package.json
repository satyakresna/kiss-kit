{
  "name": "kiss-kit",
  "version": "1.0.0",
  "description": "Keep It Simple Stupid Kit",
  "main": "index.js",
  "scripts": {
    "cp:assets": "mkdir -p dist/assets && cp -R src/assets dist",
    "cp:html": "find src -name '*.html' -type f -exec cp {} dist \\;",
    "copy": "npm run cp:assets && npm run cp:html",
    "build:js": "rollup -c",
    "build:css": "postcss src/css/style.css -d dist/css",
    "build": "npm run copy && npm run build:js && npm run build:css",
    "dev": "rm -rf dist && npm run build && light-server -c .lightserverrc",
    "production": "NODE_ENV=production npm run build && gulp inject:analytics"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/satyakresna/kiss-kit"
  },
  "keywords": [
    "kiss",
    "starter",
    "kit"
  ],
  "author": "Satya Kresna <satyakresna6295@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "browser-sync": "^2.26.7",
    "gulp": "^4.0.2",
    "gulp-inject-string": "^1.1.2",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "postcss-cli": "^7.1.1",
    "rollup": "^2.7.1",
    "rollup-plugin-terser": "^5.3.0"
  },
  "dependencies": {
    "connect-history-api-fallback": "^1.6.0",
    "cssnano": "^4.1.10",
    "light-server": "^2.8.0",
    "page": "^1.11.6",
    "tailwindcss": "^1.3.3"
  }
}
